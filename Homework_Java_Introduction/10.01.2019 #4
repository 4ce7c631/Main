import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        System.out.println("===============================================================================================================================================================");
        System.out.println("Made by 4ce7c631 | [WEB] https://github.com/4ce7c631");
        System.out.println("===============================================================================================================================================================");
        System.out.println("      ______  ________  ______  ________ ________________");
        System.out.println("     /  __  \\/   ____/ /  __  \\/    ___//   ____// ______\\");
        System.out.println("    /  / /  /  ___/   /  / /  /\\____  \\/  ___/  / /");
        System.out.println("   /  /_/  /  /_____ /  /_/  /_____/  /  /_____/ \\_______");
        System.out.println("  /_______/________//_______//_______/________/\\________/");
        System.out.println(" ");
        Scanner sc = new Scanner(System.in);
        System.out.println("Введите возраст первого человека");
        int age1 = sc.nextInt();
        System.out.println("Введите возраст второго человека");
        int age2 = sc.nextInt();
        System.out.println("Введите возраст третьего человека");
        int age3 = sc.nextInt();
        result(age1 ,age2, age3);
    }
    static void result(int age1, int age2, int age3) {
        if (age3 > age2 && age2 > age1) {
            int a = age3 - age2;
            int b = age2 - age1;
            System.out.println("3ий человек выше 2го на " + a + " лет, а 2ой человек выше 1го на " + b + " лет");
        }
        else if (age3 > age1 && age1 > age2) {
            int a = age3 - age1;
            int b = age1 - age2;
            System.out.println("3ий человек выше 1го на " + a + " лет, а 1ый человек выше 2го на " + b + " лет");
        }
        else if (age2 > age1 && age1 > age3) {
            int a = age2 - age1;
            int b = age1 - age3;
            System.out.println("2ой человек выше 1го на " + a + " лет, а 1ый человек выше 3го на " + b + " лет");
        }
        else if (age2 > age3 && age3 > age1) {
            int a = age2 - age3;
            int b = age3 - age1;
            System.out.println("2ой человек выше 3го на " + a + " лет, а 3ий человек выше 1го на " + b + " лет");
        }
        else if (age1 > age2 && age2 > age3) {
            int a = age1 - age2;
            int b = age2 - age3;
            System.out.println("1ый человек выше 2го на " + a + " лет, а 2ой человек выше 3го на " + b + " лет");
        }
        else if (age1 > age3 && age3 > age2) {
            int a = age1 - age3;
            int b = age3 - age2;
            System.out.println("1ый человек выше 3го на " + a + " лет, а 3ий человек выше 2го на " + b + " лет");
        }
        else
            System.out.println("ERROR!!!11!1");
    }
}
